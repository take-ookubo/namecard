<h1>会社名一覧</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Name kana</th>
      <th>Zip</th>
      <th>Address</th>
      <th>Tel</th>
      <th>Fax</th>
      <th>Url</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @companies.each do |company| %>
      <tr>
        <td><%= company.name %></td>
        <td><%= company.name_kana %></td>
        <td><%= company.zip %></td>
        <td><%= company.address %></td>
        <td><%= company.tel %></td>
        <td><%= company.fax %></td>
        <td><%= company.url %></td>
        <td><%= link_to '詳細', company %></td>
        <td><%= link_to '編集', edit_company_path(company) %></td>
        <td><%= link_to '削除', company, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

